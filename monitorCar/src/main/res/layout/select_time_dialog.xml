<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f8f8ff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="20dp" 
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="开始日期："
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/edtStartDay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/blueline"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="开始时间："
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/edtStartHour"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/blueline"
            android:textSize="15sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="结束日期："
            android:textColor="#000000" 
            android:textSize="15sp"/>

        <Button
            android:id="@+id/edtEndDay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/blueline"
            android:textSize="15sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="结束时间："
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/edtEndHour"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/blueline"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_pop_search"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_search_selector"
        android:gravity="center"
        android:text="查       询"
        android:textSize="20sp"  />

</LinearLayout>